---
import BaseLayout from '../components/templates/BaseLayout.astro';
import CareerTimeline from '../components/organisms/CareerTimeline.astro';
import ActivitySection from '../components/organisms/ActivitySection.astro';
---

<BaseLayout
  title="History — hiroaki.dev"
  description="Hiroaki Yoshimura の経歴タイムラインです。"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8 flex flex-col gap-6">
    <h1 class="text-2xl font-bold" style="color: var(--color-primary);">History</h1>
    <div class="max-w-2xl">
      <CareerTimeline showAll={true} />
    </div>
    <ActivitySection />
  </div>
</BaseLayout>
