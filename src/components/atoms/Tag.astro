---
/**
 * 記事ソースタグ（aws / other）
 */
export interface Props {
  type: 'aws' | 'other';
  class?: string;
}

const { type, class: className = '' } = Astro.props;

const label = type === 'aws' ? 'AWS Blog' : 'Other';
const colorClass =
  type === 'aws'
    ? 'bg-[oklch(0.90_0.06_60)] text-[oklch(0.35_0.12_60)]'
    : 'bg-[oklch(0.90_0.06_145)] text-[oklch(0.30_0.10_145)]';
---

<span
  class={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${colorClass} ${className}`}
>
  {label}
</span>
