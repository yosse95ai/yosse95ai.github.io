---
export interface Props {
  externalUrl: string;
  title: string;
  description: string;
  ogpImage: string;
}

const { externalUrl, title, description, ogpImage } = Astro.props;

const hostname = new URL(externalUrl).hostname.replace(/^www\./, '');
---

<a
  href={externalUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="group flex flex-col rounded-2xl overflow-hidden border transition-shadow hover:shadow-lg no-underline"
  style="background: var(--color-surface); border-color: var(--color-border); box-shadow: 0 1px 4px var(--color-shadow-sm);"
>
  <!-- OGP画像 -->
  <div class="aspect-[1200/630] w-full overflow-hidden bg-[var(--color-surface-subtle)]">
    {ogpImage ? (
      <img
        src={ogpImage}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-[var(--color-text-secondary)]">
        <span class="text-sm">No Image</span>
      </div>
    )}
  </div>

  <!-- テキスト -->
  <div class="flex flex-col gap-0.5 p-3 flex-1">
    <span class="text-xs font-mono" style="color: var(--color-text-muted);">{hostname}</span>
    <p class="text-sm font-semibold leading-tight line-clamp-2" style="color: var(--color-text);">
      {title}
    </p>
    {description && (
      <p class="text-xs leading-snug line-clamp-3 mt-0" style="color: var(--color-text-muted); margin-top: 2px;">
        {description}
      </p>
    )}
  </div>
</a>
