---
import OgpCard from './OgpCard.astro';
import { fetchOgp } from '../../lib/fetchOgp';

export interface Props {
  url: string;
}

const { url } = Astro.props;
const ogp = await fetchOgp(url);
---

<OgpCard
  externalUrl={url}
  title={ogp.title}
  description={ogp.description}
  ogpImage={ogp.ogpImage}
/>
