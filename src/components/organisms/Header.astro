---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/history', label: 'History' },
];

const currentPath = Astro.url.pathname;
---

<header
  class="sticky top-0 z-50 w-full border-b backdrop-blur-sm"
  style="background: var(--color-header-bg); border-color: var(--color-border);"
>
  <div class="px-4 sm:px-6">
    <div class="flex h-14 items-center justify-between">
      <!-- ロゴ -->
      <a
        href="/"
        class="font-mono text-lg font-semibold no-underline"
        style="color: var(--color-primary);"
      >
        hiroaki.dev
      </a>

      <!-- ナビゲーション -->
      <nav aria-label="メインナビゲーション">
        <ul class="flex items-center gap-1 list-none m-0 p-0">
          {navLinks.map(({ href, label }) => {
            const isActive = href === '/'
              ? currentPath === '/'
              : currentPath.startsWith(href);
            return (
              <li>
                <a
                  href={href}
                  class="rounded-lg px-3 py-1.5 text-sm font-medium transition-colors no-underline"
                  style={isActive
                    ? 'background: var(--color-nav-active-bg); color: var(--color-nav-active-text);'
                    : 'color: var(--color-text-muted);'}
                  aria-current={isActive ? 'page' : undefined}
                >
                  {label}
                </a>
              </li>
            );
          })}
        </ul>
      </nav>
    </div>
  </div>
</header>
