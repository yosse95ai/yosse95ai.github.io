---
import Header from '../organisms/Header.astro';
import { ClientRouter } from 'astro:transitions';
import '../../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'hiroaki.dev',
  description = 'AWSのSolutions Architectとして活動するソフトウェアエンジニアのポートフォリオサイトです。',
} = Astro.props;

const siteUrl = 'https://yosse95ai.github.io';
const ogImage = `${siteUrl}/images/icon.jpg`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- OGP -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={siteUrl} />
    <meta name="twitter:card" content="summary_large_image" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- View Transitions -->
    <ClientRouter />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <footer
      class="mt-16 border-t py-6 text-center text-xs"
      style="border-color: var(--color-border); color: var(--color-text-secondary);"
    >
      © {new Date().getFullYear()} Hiroaki Yoshimura
    </footer>
  </body>
</html>
